<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaPersonal.CrearContactoPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <FlexLayout Direction="Column"
                    AlignItems="Center"
                    JustifyContent="Start"
                    Padding="30"
                    Margin="0,40,0,0">

            <Label Text="Nuevo Contacto"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   Margin="0,0,0,20" />

            <Frame CornerRadius="15" Padding="10" HasShadow="False" BackgroundColor="White" WidthRequest="280" Margin="0,0,0,10">
                <Entry x:Name="nombreEntry" Placeholder="Nombre" BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="15" Padding="10" HasShadow="False" BackgroundColor="White" WidthRequest="280" Margin="0,0,0,10">
                <Entry x:Name="correoEntry" Placeholder="Correo" Keyboard="Email" BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="15" Padding="10" HasShadow="False" BackgroundColor="White" WidthRequest="280" Margin="0,0,0,10">
                <Entry x:Name="telefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" BackgroundColor="Transparent" />
            </Frame>

            <Frame CornerRadius="15" Padding="10" HasShadow="False" BackgroundColor="White" WidthRequest="280" Margin="0,0,0,20">
                <Entry x:Name="direccionEntry" Placeholder="Dirección" BackgroundColor="Transparent" />
            </Frame>

            <Button Text="Registrar Contacto"
                    WidthRequest="280"
                    BackgroundColor="#5d478b"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    HeightRequest="45"
                    Clicked="OnGuardarClicked"/>
        </FlexLayout>
    </ScrollView>
</ContentPage>